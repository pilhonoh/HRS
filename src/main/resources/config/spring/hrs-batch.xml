<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
		
     	<!-- 
     		=============JobScheduler ==========
     		|	=JobTrigger=     =JobTrigger=	|
     		|	|=JobDetail=|   |=JobDetail=|	|	
     		|	| |		  |	|   | |		  |	|	|
     		|	| | Job...|	|   | | Job...| |	|
     		|	| |		  | |   | |		  | |	|
     		|	| =========	|   | =========	|	|
     		|	=============   =============	|	
     		=====================================		
    	-->
		
		<!-- Job Bean 목록 -->
			<!-- CSP 연동 SMS/쪽지/Mail JOB -->
			<bean id="CspSendJob" class="com.skt.hrs.cmmn.batch"/> 
		<!-- Job Bean 목록 end -->
		
		<!-- JobDetail 목록 -->
		<bean id="jobCspSendDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"> 
			<!-- CSP 연동 SMS/쪽지/Mail JOB -->
		    <property name="targetObject" ref="CspSendJob"/>
		    <property name="targetMethod" value="execute"/>
		    <property name="concurrent" value="false"/>
	    </bean>
		<!-- JobDetail 목록 end-->
		
		<!-- Trigger 목록 org.springframework.scheduling.quartz.CronTriggerFactoryBean-->
		<bean id="CspSendTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean"> 
			<!-- CSP 연동 SMS/쪽지/Mail JOB -->
		    <property name="jobDetail" ref="jobCspSendDetail" />
		    <property name="startDelay" value="3000" />
		    <property name="repeatInterval" value="60000"></property>
		</bean>
		<!-- Trigger 목록 end-->
		
		<!--
		    스케줄 관리해준다.
		-->
		<bean id="schedulerFactory" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		    <property name="triggers">
		        <list>	     
		            <ref bean="CspSendTrigger" /> 		
		        </list>
		    </property>
		    <property name="quartzProperties">
		    	<props>
		    		<prop key="org.quartz.scheduler.instanceName">fsbu_scheduler</prop>
            		<prop key="org.quartz.scheduler.instanceId">AUTO</prop>
		    	</props>
		    </property>
	    </bean>
</beans>